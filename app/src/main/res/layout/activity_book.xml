<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    android:orientation="vertical"
    tools:context=".book">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BOOK DATA MANIPULATION"
        android:textColor="#F43B00"
        android:textSize="20dp"
        android:gravity="center"
        android:fontFamily="sans-serif-black"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id"
                android:textSize="30dp"
                android:fontFamily="sans-serif-black"
                android:layout_marginVertical="10dp"/>
            <EditText
                android:id="@+id/edt_bid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="id"
                android:textColor="#F43B00"
                android:inputType="number"
                android:textSize="30dp"
                android:layout_marginVertical="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Name"
                android:textSize="30dp"
                android:fontFamily="sans-serif-black"
                android:layout_marginVertical="10dp"/>
            <EditText
                android:id="@+id/edt_bname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="book name"
                android:textAllCaps="true"
                android:textColor="#F43B00"
                android:textSize="30dp"
                android:layout_marginVertical="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price"
                android:textSize="30dp"
                android:fontFamily="sans-serif-black"
                android:layout_marginVertical="10dp"/>
            <EditText
                android:id="@+id/edt_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="price"
                android:textColor="#F43B00"
                android:inputType="number"
                android:textSize="30dp"
                android:layout_marginVertical="10dp"/>
            <Button
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:background="#F43B00"
                android:textSize="30dp"
                android:fontFamily="sans-serif-black"
                android:layout_marginVertical="10dp"/>
            <Button
                android:id="@+id/btn_bmodify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="modify"
                android:background="#F43B00"
                android:textSize="30dp"
                android:fontFamily="sans-serif-black"
                android:layout_marginVertical="10dp"/>
            <Button
                android:id="@+id/btn_bdel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="delete"
                android:background="#F43B00"
                android:textSize="30dp"
                android:fontFamily="sans-serif-black"
                android:layout_marginVertical="10dp"/>
            <Button
                android:id="@+id/btn_bsrch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="search"
                android:background="#F43B00"
                android:textSize="30dp"
                android:fontFamily="sans-serif-black"
                android:layout_marginVertical="10dp"/>
            <Button
                android:id="@+id/btn_mang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="back tom mang"
                android:background="#F43B00"
                android:textSize="30dp"
                android:fontFamily="sans-serif-black"
                android:layout_marginVertical="10dp"/>







        </LinearLayout>
    </ScrollView>


</LinearLayout>