<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFC107"
    tools:context=".datahandle">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to dataflair library"
        android:textSize="30dp"
        android:gravity="center"
        android:fontFamily="sans-serif-black"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img"/>
            <Button
                android:id="@+id/btn_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#DD3C0A"
                android:text="add/delete/moify book detail"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/btn_candidate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#DD3C0A"
                android:text="add/delete/moify candidate detail"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/btn_candidatelist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#DD3C0A"
                android:text="View candidate list"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/btn_booklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="book list"
                android:background="#DD3C0A"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/btn_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="admin list"
                android:background="#DD3C0A"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/btn_backm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#DD3C0A"
                android:text="back to management"
                android:textAllCaps="false"/>







        </LinearLayout>
    </ScrollView>

</LinearLayout>